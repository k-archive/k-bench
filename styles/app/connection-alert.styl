.connection
    position: fixed
    text-align: center
    top: 0
    left: 0
    width: 100%
    height: 0
    z-index: 2000
.connection > .alert
    border-top: 0
    border-top-left-radius: 0
    border-top-right-radius: 0
    display: inline-block

.connection .alert
	background rgb(0,0,0,0.2)
	color #fff
	padding 1em
	border-radius 0 0 6px 6px
	box-shadow 0 0 5px rgba(0,0,0,0.4)
	top 0
	margin 0

	a
		color #fff